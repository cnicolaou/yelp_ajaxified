<div style="text-align:center">
  <h2><%= @restaurant.name.titleize %></h2>
  <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=200x150&sensor=false&maptype=roadmap&markers=color:red|#{@restaurant.address}" %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>
        <%= pluralize @restaurant.reviews.size, "review" %>
      </h2>
    </div>
    <div class="panel-body">
      <div id="reviews">
        <% if @restaurant.reviews.blank? %>
          Be the first to leave a review for <%= @restaurant.name %>
        <% else %>
          <% @restaurant.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
